{
	"easycom": {
		"autoscan": true,
		"^tui-(.*)": "thorui-uni/lib/thorui/tui-$1/tui-$1.vue",
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [{
			"path": "pages/home/index",
			"style": {
				"app-plus": {
					"titleNView": false
				},
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/home/card",
			"style": {
				"navigationBarTitleText": "卡片列表",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/home/article",
			"style": {
				"navigationBarTitleText": "文章列表",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/my/index",
			"style": {
				"app-plus": {
					"titleNView": false
				}
			}
		},
		{
			"path": "pages/files/upload",
			"style": {
				"navigationBarTitleText": "上传文件"
			}
		},
		{
			"path": "pages/files/image-view",
			"style": {
				"navigationBarTitleText": "浏览图片",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/card/edit",
			"style": {
				"navigationBarTitleText": "卡片"
			}
		},
		{
			"path": "pages/article/edit",
			"style": {
				"navigationBarTitleText": "文章"
			}
		}
	],
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#2979ff",
		"borderStyle": "white",
		"backgroundColor": "#ffffff",
		"list": [{
				"pagePath": "pages/home/index",
				"text": "文件",
				"iconPath": "static/folder-b-outline.png",
				"selectedIconPath": "static/folder-b.png"
			},
			{
				"pagePath": "pages/home/card",
				"text": "卡片",
				"iconPath": "static/account-box-outline.png",
				"selectedIconPath": "static/account-box.png"
			},
			{
				"pagePath": "pages/home/article",
				"text": "文章",
				"iconPath": "static/account-box-outline.png",
				"selectedIconPath": "static/account-box.png"
			},
			{
				"pagePath": "pages/my/index",
				"text": "我的",
				"iconPath": "static/account-box-outline.png",
				"selectedIconPath": "static/account-box.png"
			}
		]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "Yun",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	}
}